<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef>
        <defName>Adrenaline</defName>
        <label>adrenaline</label>
        <defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
        <maxSeverity>2</maxSeverity>
        <stages>

            <li>
                <label>slight</label>
                <becomeVisible>false</becomeVisible>
            </li>

            <li>
                <label>slight</label>
                <minSeverity>0.1</minSeverity>
                <capMods>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.15</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.05</offset>
                    </li>
                </capMods>
                <painFactor>0.95</painFactor>
            </li>

            <li>
                <label>moderate</label>
                <minSeverity>0.3</minSeverity>
                <capMods>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.3</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.1</offset>
                    </li>
                </capMods>
                <painFactor>0.88</painFactor>
            </li>

            <li>
                <label>intense</label>
                <minSeverity>0.6</minSeverity>
                <capMods>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.5</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>0.2</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.15</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.15</offset>
                    </li>
                </capMods>
                <painFactor>0.8</painFactor>
            </li>

            <li>
                <label>extreme</label>
                <minSeverity>1</minSeverity>
                <capMods>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.8</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>0.25</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.2</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.2</offset>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="HediffGiver_Random">
                        <hediff>HeartAttack</hediff>    
                        <mtbDays>1.2</mtbDays>
                        <partsToAffect>
                            <li>Heart</li>
                        </partsToAffect>
                    </li>
                </hediffGivers>
                <painFactor>0.7</painFactor>
            </li>

        </stages>
    </HediffDef>

</Defs>